<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_library"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Fragment_AddComic"
    android:id="@+id/fragment_add_comic">

    <EditText
        android:background="#99FFFFFF"
        android:textColor="#0048FF"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Type name of comic"
        android:textSize="19sp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:id="@+id/new_name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="#99FFFFFF"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:hint="Input url of the cover"
        android:shadowColor="#000000"
        android:textColor="#0048FF"
        android:textColorHint="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        android:id="@+id/new_imgsrc"
        />

    <EditText
        android:background="#99FFFFFF"
        android:textColor="#0048FF"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="                             \n                             \nType content of comic\n                             \n                             "
        android:textSize="19sp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:id="@+id/new_content"
        android:inputType="textMultiLine"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ADD COMIC"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:fontFamily="serif-monospace"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="#1DE9B6"
        android:id="@+id/btn_add"
        />

</LinearLayout>